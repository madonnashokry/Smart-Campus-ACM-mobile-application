<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Attendence_tracking">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="738dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:background="#0E9090"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Left arrow icon -->
            <ImageButton
                android:id="@+id/backkk"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/leftarrow" />

            <!-- Text in the center -->
            <TextView
                android:id="@+id/textViewCenter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Attendance Tracking"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:textStyle="normal|bold" />

            <!-- Notification icon on the right -->
            <ImageButton
                android:id="@+id/notfybtn"
                android:layout_width="30dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/notfc" />
        </LinearLayout>


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginTop="50dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
