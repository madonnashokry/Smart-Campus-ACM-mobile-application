<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="731dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp">

            <RelativeLayout
                android:id="@+id/shape"
                android:layout_width="wrap_content"
                android:layout_height="211dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="-48dp"
                android:layout_marginTop="-85dp">

                <ImageView
                    android:layout_width="111dp"
                    android:layout_height="149dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ellipse" />

                <ImageView
                    android:layout_width="219dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="50dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.071"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/ellipsee" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your University ID"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/sign_up_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your First Name"
                    android:inputType="textPersonName|textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Middle Name"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/middle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your Middle Name"
                    android:inputType="textPersonName|textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your Last Name"
                    android:inputType="textPersonName|textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SSN"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/SSN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your SSN"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/sign_up_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your Email"
                    android:inputType="textPersonName|textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your password"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins_bold" />

                <EditText
                    android:id="@+id/role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_textbox"
                    android:ems="10"
                    android:drawablePadding="10dp"
                    android:hint="Enter your role"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="20dp"
                    android:textColorHint="@color/dark_grey"
                    android:textSize="18dp" />
            </LinearLayout>

            <!-- Adjusted margin for Sign In Button -->
            <Button
                android:id="@+id/login_btn"
                android:layout_width="348dp"
                android:layout_height="62dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#1E9090"
                android:fontFamily="@font/poppins_bold"
                android:text="Sign Up"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="normal"
                app:cornerRadius="?attr/listPreferredItemHeightLarge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/role" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
