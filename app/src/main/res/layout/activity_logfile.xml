    <!-- Entry 1 -->

    <!-- Entry 2 -->

    <RelativeLayout
        android:id="@+id/rlEntry1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="63dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@+id/rlEntry3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlEntry2"
        tools:ignore="MissingConstraints">

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="8dp"
            android:text="Feb 19, 2024"
            android:textSize="16sp" />

        <!-- Event type (e.g., Lecture) -->
        <TextView
            android:id="@+id/tvEventType1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDate1"
            android:padding="8dp"
            android:text="Lecture" />

